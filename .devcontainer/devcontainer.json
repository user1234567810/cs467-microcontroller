{
  "name": "Raspberry Pi Pico Dev Container",
  "build": { "dockerfile": "Dockerfile" },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "raspberry-pi.raspberry-pi-pico"
      ]
    }
  },

  "containerEnv": {
    "PICO_SDK_PATH": "/opt/pico-sdk",
    "PICO_TOOLCHAIN_PATH": "/usr"
  },

  "postCreateCommand": "cmake -B build -S . -G Ninja -DPython3_EXECUTABLE=/usr/bin/python3 || cmake -B build -S ."
}